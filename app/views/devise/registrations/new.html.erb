<style>
body {
    background: linear-gradient(to right, #6a11cb, #2575fc); /* Gradient background */
    font-family: Arial, sans-serif; /* Font for the whole page */
}

.container {
    display: flex;
    justify-content: center; /* Center the card horizontally */
    align-items: center; /* Center the card vertically */
    height: 100vh; /* Full viewport height */
}

.card {
  background-color: rgba(255, 255, 255, 0.9); /* Slightly transparent white background */
    border-radius: 10px; /* Rounded corners */
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Deeper shadow for more depth */
    padding: 2rem; /* Padding inside the card */
    width: 400px; /* Fixed width for the card */
}

h2 {
    text-align: center; /* Center the heading */
    margin-bottom: 1rem; /* Space below the heading */
    color: #333; /* Dark color for the heading */
}

.field {
    margin-bottom: 1rem; /* Space between fields */
}

label {
    display: block; /* Block display for labels */
    margin-bottom: 0.5rem; /* Space below labels */
    color: #555; /* Slightly lighter color for labels */
}

input[type="email"],
input[type="password"] {
    width: 100%; /* Full width inputs */
    padding: 0.75rem; /* Increased padding for inputs */
    border: 1px solid #ccc; /* Light border */
    border-radius: 5px; /* Rounded corners for inputs */
    box-sizing: border-box; /* Include padding and border in width */
    transition: border-color 0.3s; /* Smooth transition for border color */
}

input[type="email"]:focus,
input[type="password"]:focus {
    border-color: #6a11cb; /* Change border color on focus */
    outline: none; /* Remove default outline */
}

.actions {
    text-align: center; /* Center the submit button */
}

input[type="submit"] {
    background-color: #6a11cb; /* Vibrant purple color */
    color: white; /* White text */
    border: none; /* No border */
    padding: 0.75rem; /* Padding for the button */
    border-radius: 5px; /* Rounded corners for button */
    cursor: pointer; /* Pointer cursor on hover */
    width: 100%; /* Full width button */
    transition: background-color 0.3s; /* Smooth transition for background color */
}

input[type="submit"]:hover {
    background-color: #2575fc; /* Change to a brighter blue on hover */
}
</style>
<body>
<div class="container">
  <div class="card">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</body>